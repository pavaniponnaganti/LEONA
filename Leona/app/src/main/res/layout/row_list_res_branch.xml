<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_story_list_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/size_5dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardPreventCornerOverlap="false"

        app:contentPadding="@dimen/card_elv">

    <LinearLayout
        android:id="@+id/row_home__content_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="6">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_marginLeft="@dimen/size_10dp"

                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/row_list_res_branch_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/row_home_des_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@string/app_name"
                    android:visibility="gone"
                    android:text="Cafteria"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>




            <RelativeLayout
                android:id="@+id/row_list_res_branch_redrict_rl"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="4"
                android:background="@drawable/round_rect_yellow">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="6"
                    android:gravity="center"
                    android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableLeft="@mipmap/locate"
                        android:drawablePadding="3dp"
                        android:text="@string/get_directions"
                        tools:text="35" />





                </LinearLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="2"
                    android:background="@drawable/round_rect_red">





                    <TextView
                        android:id="@+id/row_list_res_branch_distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"

                        android:drawablePadding="@dimen/size_10dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="07:00:00" />
                </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/row_list_res_branch_img_iv"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/row_list_res_branch_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="07:00:00" />

                    <TextView
                        android:id="@+id/row_list_res_branch_storetime_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="07:00:00" />


                    <TextView
                        android:id="@+id/row_list_res_branch_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="07:00:00" />

                </LinearLayout>



            </LinearLayout>


    </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>