<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.leona.registration.WelcomeScreen"
    android:background="@mipmap/bg"
    tools:showIn="@layout/activity_welcome_screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:src="@mipmap/logo"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="@dimen/size_24dp"
            android:layout_marginRight="@dimen/size_24dp"
            android:layout_marginBottom="@dimen/size_40dp"


            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/content_welcome_login_btn"
                style="@style/textviewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_15dp"
                android:layout_weight="4"
                android:textAllCaps="true"
                android:background="@drawable/roundedcorners"

                android:text="Login" />


            <Button
                android:id="@+id/content_welcome_signup_btn"
                style="@style/textviewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_margin="@dimen/size_15dp"
                android:layout_weight="4"
                android:background="@drawable/roundedcorners"

                android:text="Signup" />






        </LinearLayout>



    </RelativeLayout>

</LinearLayout>
