<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_clor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.leona.registration.Login"
    tools:showIn="@layout/activity_login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_15dp"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout style="@style/textinputlayouttheme">

                <EditText
                    android:id="@+id/activity_login_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/email"
                    android:drawablePadding="@dimen/size_10dp"
                    android:hint="@string/email"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">


                <include layout="@layout/autopic_account"/>






            </LinearLayout>


            <android.support.design.widget.TextInputLayout style="@style/textinputlayouttheme">

                <EditText
                    android:id="@+id/activity_login_pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/key_small"
                    android:drawablePadding="@dimen/size_10dp"
                    android:hint="@string/pwd"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/white"

                    android:singleLine="true"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_15dp"
                android:orientation="vertical">



            <Button
                android:id="@+id/activity_login_btn"
                style="@style/textviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_5dp"
                android:padding="@dimen/size_15dp"
                android:background="@mipmap/btn_login"

                android:textColor="@color/gray"
                android:textSize="@dimen/size_22dp" />


            <Button
                android:id="@+id/activity_fb_btn"
                style="@style/textviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_5dp"
android:visibility="gone"
                android:padding="@dimen/size_15dp"
                android:background="@mipmap/btn_facebook"



                android:textColor="@color/white"
                android:textSize="@dimen/size_22dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/activity_login_fpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginBottom="@dimen/size_24dp"
                android:text="@string/fpwd"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18dp" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
